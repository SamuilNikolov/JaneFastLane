@model IEnumerable<Jane_Fast_Lane.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section id="menu" class="menu">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <p>НАШЕТО <span>МЕНЮ</span></p>
        </div>

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">

            <li class="nav-item">
                <a class="nav-link active show" data-bs-toggle="tab" data-bs-target="#menu-starters">
                    <h4>Салата</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-breakfast">
                    <h4>Предястие</h4>
                </a><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-lunch">
                    <h4>Основно ястие</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
                    <h4>Барбекю</h4>
                </a>
            </li><!-- End tab nav item -->
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
                    <h4>Пица</h4>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
                    <h4>Ризото</h4>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
                    <h4>Паста</h4>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
                    <h4>Десерт</h4>
                </a>
            </li>
        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="menu-starters">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Starters</h3>
                </div>

                <div class="row gy-5">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 menu-item">
                            <a href="/Menu/Details/@item.Id"><img src="@Html.DisplayFor(modelItem => item.Image)" class="menu-img img-fluid" alt=""></a>
                            <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                            <p class="ingredients">
                                @Html.DisplayFor(modelItem => item.Summary)
                            </p>
                            <p class="price">
                                @Html.DisplayFor(modelItem => item.Price) лв.
                            </p>
                        </div>
                    }

                </div>
            </div><!-- End Starter Menu Content -->

        </div>
        <h1>Добавете към менюто </h1><a asp-action="Create">тук</a>

    </div>

</section>

